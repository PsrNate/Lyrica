<h1>Game list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Opus</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('game_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.opus }}</td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.slug }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('game_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('game_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('game_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
