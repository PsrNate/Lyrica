{# LyricaEirinBundle:Persona:show.html.twig #}
{% extends LyricaEirinBuneld::layout.html.twig %}
<h1>Persona</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Intergame Elo</th>
            <td>{{ entity.elo }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('persona') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('persona_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('persona_delete', { 'id': entity.id }) }}"
              method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

<ul class="appearances">
    {% for app in entity.appearances %}
    <li>
        {{ app.game.fullName }}
        (<a href="{{ path('appearance_show', { 'id' : app.id }) }}">
            Show
        </a>)
    </li>
    <ul class="roles">
        {% for role in app.roles %}
        <li>{{ role.title }}</li>
        {% endfor %}
    </ul>
    {% endfor %}
</ul>
